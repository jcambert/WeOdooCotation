<?xml version="1.0"?>
<odoo>
   <record id="cotation_stage_list_view" model="ir.ui.view">
        <field name="name">we.cotation.stage.list.view</field>
        <field name="model">we.cotation.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="fold"/>
            </tree>
        </field>
    </record>
    <record id="cotation_stage_form_view" model="ir.ui.view">
        <field name="name">cotation.stage.form.view</field>
        <field name="model">we.cotation.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="General">
                            <field name="name"/>
                            
                        </group>
                        <group>
                            <field name="fold"/>
                        </group>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>
     <record id="cotation_stage_action" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">we.cotation.stage</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem 
            id="menu_cotation_stage"
            action="cotation_stage_action"
            parent="menu_cotation_configuration"
            name="Stages"
            sequence="1"/>
</odoo>