<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="we_product_attribute_view_form_inherited" model="ir.ui.view">
        <field name="name">we.product.attribute.view.form.inherited</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="model">product.attribute</field>
        <field name="arch" type="xml">
        <xpath expr="//field[@name='value_ids']/tree" position="inside">
            <field name="length" attrs="{'column_invisible': [('parent.display_type', '!=', 'dimension')]}" />
            <field name="width" attrs="{'column_invisible': [('parent.display_type', '!=', 'dimension')]}" />
        </xpath>
        </field>
    </record>

</odoo>
