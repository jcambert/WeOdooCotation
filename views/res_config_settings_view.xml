<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="we_cotation_settings_form_view" model="ir.ui.view">
            <field name="name">we.cotation.settings.form.view.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="60"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="We Product" string="We Product" data-key="WeOdooCotation">
                        <h2>Configuration des Articles</h2>
                        <div class="row mt16 o_settings_container" name="cotation_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box ">
                                <div class="o_setting_right_pane">
                                    <label for="sheetmetal_category"/>
                                    <div class="text-muted">
                                        Categorie pour determiner si un article est une tole
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="sheetmetal_category" class="o_light_label"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box ">
                                <div class="o_setting_right_pane">
                                    <label for="component_category"/>
                                    <div class="text-muted">
                                        Categories pour determiner si un article est un composant
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="component_category" class="o_light_label"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                           
                        </div>
                        <h2>Configuration</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box ">
                                <div class="o_setting_left_pane">
                                    <field name="product_name_force_uppercase" class="o_light_label"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="product_name_force_uppercase"/>
                                    <div class="text-muted">
                                        Forcer le mode majuscule sur le nom des produits
                                    </div>

                                </div>
                            </div>
                            
                        </div>
                        
                    </div>
                </xpath>
            </field>
        </record>

        <record id="we_cotation_settings_configuration_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'WeOdooCotation', 'bin_size': False}</field>
        </record>

        
    </data>
</odoo>